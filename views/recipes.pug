extends base

block content
  h1= title
  main.main
    .card-container
      each recipe in recipes
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`img/recipes/${recipe.image}`, alt=`${recipe.title}`)
            h3.heading-tertiary
              span= recipe.title

          .card__details
            h4.card__sub-heading= recipe.cuisine
            p.card__text= recipe.description
            .card__data
              p.card__icon ⏰
              span= recipe.preparationTime + recipe.cookingTime
            .card__data
              p.card__icon 😬
              span= recipe.difficulty
            .card__data
              p.card__icon 🌱
              span= recipe.dietary
            .card__data
              p.card__icon 🧍
              span #{recipe.serves} people

          .card__footer
            p
              span.card__footer-value #{recipe.price + ' '}
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value #{recipe.ratingsAverage + ' '}
              span.card__footer-text ⭐️ (#{recipe.ratingsQuantity})
            a.btn.btn--green.btn--small(href=`/recipes/${recipe.slug}`) Details